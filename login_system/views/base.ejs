<%-include('header')-%>

<div class="text-center center-div" id="login">
  <div class="container w-25 py-5">
    <div class="title pb-5">
      <h2 class="font-weight-bold">Login System</h2>
     
      <span style="color: rgb(72, 65, 65)">
        <%if(locals.logout){%> <%=logout%> <% } %>       </span
      >



    </div>
    <form action="/login" method="post">
      <div class="form-group text-start">
        <input style="border-color: green;border-width: 1.5px;"
          type="email"
          class="form-control"
          placeholder="email"
          name="email"
        />
        <!-- <small class="form-text text-muted text-left"
          >Register email address</small
        > -->
      </div>
      <div class="form-group">
        <input style="border-color: green;border-width: 1.5px;"
          type="password"
          class="form-control mt-3"
          name="password"
          placeholder="password"
        />
      </div>
      <button type="submit" class="btn btn-success rounded-pill m-2">
        Login
      </button>
    </form>
  </div>
  <!-- <% if(locals.logout) { %>
  <div class="alter alert-success text-center"><%=logout%></div>
    <% } %> -->




</div>

<%-include('footer')-%>